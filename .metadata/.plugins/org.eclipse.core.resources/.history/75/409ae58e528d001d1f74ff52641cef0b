package bytebank;

public class TestaReferencias {

	public static void main(String[] args) {
		Conta primeiraConta = new Conta(); //a variável primeiraConta não é um objeto, mas sim, uma referência
		primeiraConta.saldo = 300;
		
		System.out.println("Saldo da primeira conta: R$" + primeiraConta.saldo);
		
		Conta segundaConta = primeiraConta;
		
		System.out.println("Saldo da segunda conta: R$" + segundaConta.saldo);
		
		segundaConta.saldo += 100; //as referências vão para o mesmo objeto
		System.out.println("Saldo da segunda conta: R$" + segundaConta.saldo);	
		System.out.println("Saldo da primeira conta: R$" + primeiraConta.saldo);
		
		if(primeiraConta == segundaConta) {
			System.out.println("São a mesma conta!");
		}
	}
}
