package bytebank;

public class CriaConta {

	public static void main(String[] args) {
		Conta primeiraConta = new Conta(); //a variável primeiraConta do tipo Conta, recebe o objeto Conta()
		//a referência do saldo é da classe Conta, acessada pelo Conta primeiraConta
		primeiraConta.saldo = 200;
		System.out.println(primeiraConta.saldo);
		
		primeiraConta.saldo += 100; //aumentando o valor do salário
		System.out.println(primeiraConta.saldo);
		
		Conta segundaConta = new Conta();
		segundaConta.saldo = 50;
		System.out.println(segundaConta.saldo);
	}
}
